{
  "name": "gatien/sae2-01",
  "description": "Développement d'une application Web de consultation et modification de séries pour la SAE2-01",
  "type": "project",
  "license": "Copyleft",
  "autoload": {
    "psr-4": {
      "": "src/"
    }
  },
  "authors": [
    {
      "name": "Gatien GENEVOIS",
      "email": "gatien.genevois@etudiant.univ-reims.fr"
    },
    {
      "name": "Tristan AUDINOT",
      "email": "tristan.audinot@etudiant.univ-reims.fr"
    }
  ],
  "require": {
    "ext-pdo": "*",
    "ext-ctype": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.58",
    "codeception/codeception": "5.0",
    "codeception/module-phpbrowser": "^2.0",
    "codeception/module-asserts": "^2.0",
    "codeception/module-db": "3.1.4",
    "ext-dom": "*",
    "ext-libxml": "*",
    "phpunit/phpunit": "^9.5",
    "ext-pdo_sqlite": "*"
  },
  "scripts": {
    "start:linux": [
      "Composer\\Config::disableProcessTimeout",
      "bin/run-server.sh"
    ],
    "start:windows": [
      "Composer\\Config::disableProcessTimeout",
      "bin/run-server.bat"
    ],
    "start": [
      "@start:linux"
    ],
    "test:cs": [
      "php vendor/bin/php-cs-fixer fix --dry-run"
    ],
    "diff:cs": [
      "php vendor/bin/php-cs-fixer fix --dry-run --diff"
    ],
    "fix:cs": [
      "php vendor/bin/php-cs-fixer fix"
    ],
    "test": [
      "bin/test.bat"
    ]
  }
}
